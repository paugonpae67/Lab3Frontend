    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Backend",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "start:backend"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Frontend",
            "url": "http://localhost:19006",
            "webRoot": "${workspaceFolder}"
        }
    ]
}